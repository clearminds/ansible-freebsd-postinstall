{% if freebsd_postinstall_ntp_config_tinker_panic_enabled %}
tinker panic 0
{% endif %}
{% if freebsd_postinstall_ntp_config_driftfile %}
driftfile {{ freebsd_postinstall_ntp_config_driftfile }}
{% endif %}
{% for server in freebsd_postinstall_ntp_config_server %}
server {{ server }}
{% endfor %}
{% if freebsd_postinstall_ntp_config_statistics %}
statistics {{ freebsd_postinstall_ntp_config_statistics }}
{% endif %}
{% for filegen in freebsd_postinstall_ntp_config_filegen %}
filegen {{ filegen }}
{% endfor %}
{% for listen in freebsd_postinstall_ntp_config_listen %}
interface listen {{ listen }}
{% endfor %}
{% for restrict in freebsd_postinstall_ntp_config_restrict %}
restrict {{ restrict }}
{% endfor %}
{% if freebsd_postinstall_ntp_config_crypto %}
crypto
{% endif %}
{% if freebsd_postinstall_ntp_config_includefile %}
includefile  {{ freebsd_postinstall_ntp_config_includefile }}
{% endif %}
{% if freebsd_postinstall_ntp_config_keys %}
