{% endif %}
{% if freebsd_postinstall_ntp_config_broadcastclient %}
broadcastclient
{% endif %}
{% if freebsd_postinstall_ntp_config_multicastclient %}
multicastclient {{ freebsd_postinstall_ntp_config_multicastclient }}
{% endif %}
{% if freebsd_postinstall_ntp_config_leapfile %}
leapfile {{ freebsd_postinstall_ntp_config_leapfile }}
{% endif %}
